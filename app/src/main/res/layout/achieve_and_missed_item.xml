<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/special_item_shap"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/job"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/our_goal_type"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Goal_Name"
                android:id="@+id/our_goal_name"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:textColor="#2a7fff"
                android:textSize="10pt"
                android:layout_gravity="right|center|bottom"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Description"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/our_goal_description"
                android:textColor="@android:color/darker_gray"
                android:textSize="10pt"
                android:layout_gravity="right|center|top"
                />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2a7fff"
        android:gravity="right"
        android:id="@+id/complete_number"
        android:paddingRight="20dp"
        android:text="12/12"
        android:textSize="8pt"
        android:paddingBottom="10dp"
        />
    </LinearLayout>
</LinearLayout>
