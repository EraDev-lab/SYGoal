<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".TaskActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasks"
        android:layout_marginTop="30dp"
        android:id="@+id/tasks"
        />
    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="15sp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/tasks"
        android:layout_marginTop="15dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_toRightOf="@id/one"
        android:layout_below="@id/tasks"
        android:id="@+id/task_name"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/one"
        android:id="@+id/date"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/one"
        android:layout_toRightOf="@id/date"
        android:layout_marginTop="30dp"
        android:id="@+id/task_date"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/task_name"
        android:layout_toRightOf="@id/task_date"
        android:id="@+id/logo_date"
        android:src="@drawable/ic_date" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notify on"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/date"
        android:layout_marginTop="30dp"
        android:id="@+id/notify_on"

        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@id/date"
        android:layout_toRightOf="@id/notify_on"
        android:layout_marginTop="30dp"
        android:id="@+id/task_notify_on"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_date"
        android:layout_toRightOf="@id/task_notify_on"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_access_time"
        android:id="@+id/logo_time"/>
    <TextView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_on"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:text="Alarm"
        android:textSize="15sp"

        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/alarm"
        android:layout_below="@id/notify_on"
        android:layout_marginTop="60dp"
        android:id="@+id/task_alarm"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/task_alarm"
    android:layout_marginTop="60dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="40dp"
    android:text="Completed State"
    android:id="@+id/complete_text_view"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_alarm"
        android:layout_marginTop="55dp"
        android:id="@+id/checkbox_completed"
        android:layout_toRightOf="@+id/complete_text_view"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/delete_task"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@id/delete_task"
        android:id="@+id/save_task"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_toRightOf="@id/save_task"
        android:id="@+id/cancel_task"/>

</RelativeLayout>
