<resources>

    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#fcfcfc</item>
        <item name="tintcolor">#aaa</item>
        <item name="textcolor">@android:color/black</item>
        <item name="cardbackgroundcolor_1">#ffffff</item>
        <item name="specialbackgroundcolor">#28aaaaaa</item>
        <item name="currentbackgroundcolor">@color/colorPrimary</item>
        <item name="bottomnavigationcolor">#fdfeff</item>
        <item name="selecteditemcolor">#f0ffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="emptystatecolor">#2d6ca4</item>
        <item name="titlegoal">#28a1d3</item>
        <item name="listview">#ffffff</item>
        <item name="FloatingActionButton">@color/colorPrimary</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:popupMenuStyle">@style/PopupMenulight</item>
    </style>
    <style name="PopupMenulight" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#EBE9E9</item>
    </style>
    <style name="PopupMenudark" parent="@android:style/Widget.PopupMenu">

        <item name="android:popupBackground">#3c3a3d</item>
        <item name="android:textColor">#FF01F0</item>
        <item name="android:textSize">12sp</item>

    </style>


    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">#BDBBBB</item>
        <item name="android:textSize">15sp</item>
        <item name="android:popupBackground">#3c3a3d</item>
    </style>
    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3b393c</item>
        <item name="colorPrimaryDark">#181617</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#303030</item>
        <item name="tintcolor">#aaa</item>
        <item name="selecteditemcolor">#f0ffff</item>
        <item name="bottomnavigationcolor">#303030</item>
        <item name="currentbackgroundcolor">#3b393c</item>
        <item name="cardbackgroundcolor_1">#3b393c</item>
        <item name="textcolor">@android:color/white</item>
        <item name="specialbackgroundcolor">#181617</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="emptystatecolor">#2d6ca4</item>
        <item name="titlegoal">#3c3a3d</item>
        <item name="listview">#797979</item>
        <item name="FloatingActionButton">#ffffff</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:popupMenuStyle">@style/PopupMenudark</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:itemBackground">@color/cardview_dark_background</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#673AB7</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#404140</item>
    </style>
</resources>

