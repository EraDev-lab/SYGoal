<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.al_kahtani.sygoal">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher1"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name=".BottomNavigationViewActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".AboutActivity"
            android:label="About"
            android:parentActivityName=".BottomNavigationViewActivity" />
        <activity
            android:name=".SettingActivity"
            android:label="Setting"
            android:parentActivityName=".BottomNavigationViewActivity" />
        <activity android:name=".GoalActivity" />
        <activity android:name=".TaskActivity" />

        <receiver android:name=".classes.AlarmReceiver" />

        <activity
            android:name=".DisplayTaskScreen"
            android:parentActivityName=".BottomNavigationViewActivity" />
        <activity android:name=".WebActivity" />
        <activity android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>